<div class="column is-half">
  <article class="media box">
    <figure class="media-left">
    <p class="image is-64x64">
      <img src="https://bulma.io/images/placeholders/64x64.png" alt="Avatar placeholder">
    </p>
    </figure>

    <div class="media-content">
      <%= render 'form' %>
    </div>
  </article>

  <% @tweeets.each do |tweeet| %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <img src="https://bulma.io/images/placeholders/64x64.png" alt="Avatar placeholder">
          </figure>
        </div>

        <div class="media-content">
          <div class="content">
            <strong>Cristian Ceamatu</strong><br>
            <small>@ruby</small><br>
            <p><%= tweeet.tweeet %></p>
          </div>

          <nav class="level">
            <div class="level-left is-mobile">
              <%= link_to tweeet, class: 'level-item' do %>
                <div class="icon"><i class="fa fa-link" aria-hidden="true"></i></div>
              <% end %>
              <%= link_to edit_tweeet_path(tweeet), class: 'level-item' do %>
                <div class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></div>
              <% end %>
              <%= link_to tweeet, method: :delete, data: { confirm: 'Are you sure?' }, class: 'level-item' do %>
                <div class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></div>
              <% end %>
            </div>
          </nav>
        </div>
      </article>
    </div>
  <% end %>

</div>